@page
@model KatieComedy.Web.Pages.ContactModel
@inject IOptions<KatieComedy.Web.Cloudflare.CloudflareOptions> cloudflareOptions;

<form method="post">
    <fieldset class="row border rounded p-3 mb-3 bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-12 mb-3 p-0">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-3 p-0">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-3 p-0">
            <textarea asp-for="Message" class="form-control" style="height:7rem;" placeholder="Message"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-0 p-0">
            <button class="btn btn-primary me-1" style="background-color:#3B978C;">Send</button>
        </div>
    </fieldset>
    <div class="cf-turnstile float-end" data-sitekey="@cloudflareOptions.Value.TurnstileSiteKey" data-theme="light"></div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
