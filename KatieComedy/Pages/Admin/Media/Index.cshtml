@page
@model KatieComedy.Web.Pages.Admin.Media.IndexModel

@{
    ViewData["Title"] = "Media";
}

<div class="flex-column container p-0 custom-small">
    <div class="mb-3 d-flex justify-content-between">
        <h4 class="mb-0">@ViewData["Title"]</h4>
        <a asp-page="new" class="btn btn-primary">New</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Type</th>
                <th scope="col">Title</th>
                <th scope="col">Action</th>
            </tr>
        </thead>

        @foreach (var media in Model.Media)
        {
            <tr>
                <td>@media.Id</td>
                <td>@media.Type</td>
                <td>
                    <a href="@media.Url" target="_blank">@media.Title</a>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="edit" asp-route-id="@media.Id" class="btn btn-primary">Edit</a>
                        <form method="post" action="~/admin/media/delete/@media.Id">
                            <button class="btn btn-danger rounded-start-0">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>