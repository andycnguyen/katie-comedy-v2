@page
@model KatieComedy.Web.Pages.Admin.Biography.EditModel

@{
    ViewData["Title"] = "Edit Biography";
}

<div class="flex-column">
    <div class="mb-3 d-flex justify-content-between">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>

    <div id="preview" class="border rounded p-3 mb-3" style="width:34rem;">
        @Html.Raw(Model.Html)
    </div>

    <form method="post">
        <div class="col-md-12">
            <textarea asp-for="Text" class="form-control" style="height:12rem; width:34rem;"></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-3">
            <small class="text-muted">To include a link, use this format: [link text here](http://url-here.com)</small>
        </div>

        <div class="col-md-12">
            <button class="btn btn-primary me-1">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document
            .getElementById("Text")
            .addEventListener("input", async () => {
                const text = document.getElementById("Text").value;
                const response = await fetch("/admin/api/biography?" + new URLSearchParams({ text: text }));
                const html = response.ok
                    ? await response.text()
                    : "<span class='text-danger'>Error fetching biography preview.</span>";

                document.getElementById("preview").innerHTML = html;
            });
    </script>
}