@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // asp-area="Identity" asp-page="/Account/Manage/Index"
        <li class="nav-item">
            <span class="nav-link link-light pe-0" asp-area="" asp-page="#" title="Manage">
                @User.Identity?.Name
                <i class="bi bi-person ms-1"></i>
            </span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Account/Login", new { area = "Identity" })">
                <button type="submit" class="nav-link btn btn-link link-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link link-light" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Page("/Admin/Index", new { area = "" })">
                Login
            </a>
        </li>
    }
</ul>
